<idea-plugin>
    <id>com.dsg.k-plugin</id>
    <name>K-plugin</name>
    <vendor url="https://www.yourcompany.com">YourCompany</vendor>
    <version>1.0.0</version>
    <description><![CDATA[
        Enter short description for your plugin here.<br>
        <em>most HTML tags may be used</em>
    ]]></description>

    <depends>com.intellij.modules.platform</depends>
    <depends>Git4Idea</depends>

    <extensions defaultExtensionNs="com.intellij">
        <toolWindow
                id="Migrations"
                anchor="left"
                factoryClass="com.dsg.kplugin.components.MigrationToolWindowFactory"
                icon="/icons/pluginIcon.svg"
        />
        <projectConfigurable
                displayName="k plugin"
                instance="com.dsg.kplugin.components.MigrationSettingsConfigurable"/>
        <postStartupActivity implementation="com.dsg.kplugin.components.LoadUserOnStartup"/>

    </extensions>

    <actions>
        <group id="CreateMigrationGroup"
               class="com.dsg.kplugin.actions.CreateMigrationGroup"
               popup="true">
            <add-to-group group-id="ProjectViewPopupMenu" anchor="first"/>

        </group>
    </actions>
</idea-plugin>